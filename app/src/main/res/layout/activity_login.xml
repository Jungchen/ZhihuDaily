<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/login_background"
            android:gravity="top"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="230dp"/>
        <ImageView
            android:src="@mipmap/logo"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="\@leibnik"
            android:textColor="@color/white"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/username_et"
            android:textCursorDrawable="@drawable/cursor_shape"
            android:background="@drawable/register_login_et_selector"
            android:drawableLeft="@mipmap/account"
            android:paddingLeft="10dp"
            android:drawablePadding="8dp"
            android:hint="请输入用户名"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:textColorHint="@color/gray"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/password_et"
            android:textCursorDrawable="@drawable/cursor_shape"
            android:background="@drawable/register_login_et_selector"
            android:drawableLeft="@mipmap/password"
            android:drawablePadding="8dp"
            android:paddingLeft="10dp"
            android:hint="请输入密码"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:textColorHint="@color/gray"
            android:password="true"
            android:layout_marginTop="25dp"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_marginTop="20dp"
            android:text="登录"
            android:textSize="22sp"
            android:textColor="@color/register_login_btn_textcolor_selector"
            android:background="@drawable/register_login_btn_selector"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
    </LinearLayout>
        <TextView
            android:id="@+id/register_link"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="还没有账号？去注册"
            android:textColor="@color/gray"
            android:autoLink="all"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>